<StatementDeleteScreen>:

    statement_delete_input_id_statement: input_id_statement


    AnchorLayout:
        BoxLayout:
            orientation: "vertical"

            BoxLayout:
                padding: 20
                orientation: "horizontal"
                spacing: 30
                size_hint: (1, .4)

                Button:
                    text: "Додати"
                    font_size: 40
                    on_release:
                        root.manager.current = "statementadd"

                Button:
                    text: "Змінити"
                    font_size: 40
                    on_release:
                        root.manager.current = "statementchange"

                Button:
                    text: "Видалити"
                    font_size: 40
                    on_release:
                        root.manager.current = "statementdelete"

            AnchorLayout:
                Label:
                    text: "Видалення"
                    font_size: 45

            GridLayout:
                size_hint: (1, .4)
                padding: 40
                #orientation: "vertical"
                cols: 2

                Label:
                    text: "id statement:"

                TextInput:
                    id: input_id_statement
                    multiline: False
                    font_size: 40




            AnchorLayout:
                Label:
                    text: "Табель"
                    font_size: 45



            BoxLayout:
                orientation: "horizontal"
                size_hint: (1, .4)
                spacing: 40
                padding: 20

                Button:
                    font_size: 40
                    text: "Повернутися"

                    on_release:
                        root.manager.current = "choice"
                Button:
                    text: "Підтвердити"
                    font_size: 40
                    on_release: root.statement_delete_fun()

