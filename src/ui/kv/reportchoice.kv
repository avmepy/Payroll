<ReportChoiceScreen>:
    AnchorLayout:
        BoxLayout:


            orientation: "vertical"
            size_hint: (.6, .45)
            padding: 50
            spacing: 10

            Button:
                text: "Працівник"
                font_size: 40
                #on_release: root.get_report_worker()
                on_release: root.manager.current = "saveworker"

            Button:
                text: "Посада"
                font_size: 40
                on_release: root.manager.current = "saveposition"


            Button:
                text: "Виплати"
                font_size: 40
                on_release: root.manager.current = "savepay"


            Button:
                text: "На головну"
                font_size: 40
                on_release: root.manager.current = "choice"


