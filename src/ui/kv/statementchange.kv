<StatementChangeScreen>:

    statement_change_input_id_statement: input_id_statement
    statement_change_input_id_worker: input_id_worker
    statement_change_input_cmonth: input_cmonth
    statement_change_input_hours: input_hours

    AnchorLayout:
        BoxLayout:
            orientation: "vertical"

            BoxLayout:
                padding: 20
                orientation: "horizontal"
                spacing: 30
                size_hint: (1, .4)

                Button:
                    text: "Додати"
                    font_size: 40
                    on_release:
                        root.manager.current = "statementadd"

                Button:
                    text: "Змінити"
                    font_size: 40
                    on_release:
                        root.manager.current = "statementchange"

                Button:
                    text: "Видалити"
                    font_size: 40
                    on_release:
                        root.manager.current = "statementdelete"

            AnchorLayout:
                Label:
                    text: "Змінювання"
                    font_size: 45

            GridLayout:
                padding: 40
                #orientation: "vertical"
                cols: 2

                Label:
                    text: "id statement:"

                TextInput:
                    id: input_id_statement
                    multiline: False
                    font_size: 40

                Label:
                    text: "id worker"

                TextInput:
                    id: input_id_worker
                    multiline: False
                    font_size: 40

                Label:
                    text: "month"

                TextInput:
                    id: input_cmonth
                    multiline: False
                    font_size: 40

                Label:
                    text: "hours"

                TextInput:
                    id: input_hours
                    multiline: False
                    font_size: 40



            AnchorLayout:
                Label:
                    text: "Табель"
                    font_size: 45




            BoxLayout:
                orientation: "horizontal"
                size_hint: (1, .4)
                spacing: 40
                padding: 20

                Button:
                    font_size: 40
                    text: "Повернутися"

                    on_release:
                        root.manager.current = "choice"
                Button:
                    text: "Підтвердити"
                    font_size: 40
                    on_release: root.statement_change_fun()

